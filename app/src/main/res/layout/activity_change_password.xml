<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.ChangePasswordActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <RelativeLayout
            android:id="@+id/lytTop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">

                        <ImageView
                            android:id="@+id/imgNav"
                            android:layout_width="62dp"
                            android:layout_height="41dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5dp"
                            android:visibility="gone"
                            android:src="@drawable/ic_logo1" />

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="52dp"
                            android:layout_marginTop="5dp">

                            <ImageView
                                android:id="@+id/imgBack"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:src="@drawable/ic_back_black_color" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/raleway_bold"
                                android:gravity="center"
                                android:text="@string/change_password"
                                android:textColor="#41527E"
                                android:textSize="20sp"
                                android:textStyle="bold"></TextView>

                        </RelativeLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/imageView13"
                                android:layout_width="201dp"
                                android:layout_height="190dp"
                                android:layout_gravity="center"
                                android:src="@drawable/otp" />

                            <TextView
                                android:layout_marginTop="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/raleway_semibold"
                                android:text="@string/old_password"
                                android:textColor="#A2A6B0"
                                android:textSize="12sp"></TextView>

                            <com.google.android.material.textfield.TextInputLayout
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:boxStrokeColor="@color/black"
                                android:outlineAmbientShadowColor="@color/black"
                                android:hint=""
                                app:passwordToggleEnabled="true">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/txt_oldPass"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:imeOptions="actionNext"
                                    android:inputType="textPassword"
                                    android:singleLine="true"
                                    android:maxLength="30"
                                    android:cursorVisible="true"
                                    android:textCursorDrawable="@color/colorPrimary"
                                    android:textSize="16sp" />

                            </com.google.android.material.textfield.TextInputLayout>


                            <TextView
                                android:layout_marginTop="20dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/raleway_semibold"
                                android:text="@string/new_password"
                                android:textColor="#A2A6B0"
                                android:textSize="12sp"></TextView>

                            <com.google.android.material.textfield.TextInputLayout
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:boxStrokeColor="@color/black"
                                android:outlineAmbientShadowColor="@color/black"
                                app:passwordToggleEnabled="true">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/txt_newPass"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:imeOptions="actionNext"
                                    android:inputType="textPassword"
                                    android:singleLine="true"
                                    android:maxLength="30"
                                    android:cursorVisible="true"
                                    android:textSize="16sp" />

                            </com.google.android.material.textfield.TextInputLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:orientation="horizontal"
                                android:visibility="visible">

                                <Button
                                    android:layout_width="85dp"
                                    android:layout_height="24dp"
                                    android:layout_marginRight="05dp"
                                    android:background="@drawable/border_grey"
                                    android:fontFamily="@font/raleway_medium"
                                    android:text="@string/eight_characters"
                                    android:textAllCaps="false"
                                    android:textColor="#A0A0A0"
                                    android:textSize="10sp"></Button>

                                <Button
                                    android:layout_width="60dp"
                                    android:layout_height="24dp"
                                    android:layout_marginRight="05dp"
                                    android:background="@drawable/border_grey"
                                    android:fontFamily="@font/raleway_medium"
                                    android:text="@string/special"
                                    android:textAllCaps="false"
                                    android:textColor="#A0A0A0"
                                    android:textSize="10sp"></Button>

                                <Button
                                    android:id="@+id/button3"
                                    android:layout_width="71dp"
                                    android:layout_height="24dp"
                                    android:layout_marginRight="05dp"
                                    android:background="@drawable/border_grey"
                                    android:fontFamily="@font/raleway_medium"
                                    android:text="@string/uppercase"
                                    android:textAllCaps="false"
                                    android:textColor="#A0A0A0"
                                    android:textSize="10sp"></Button>

                                <Button
                                    android:layout_width="60dp"
                                    android:layout_height="24dp"
                                    android:layout_marginRight="05dp"
                                    android:background="@drawable/border_grey"
                                    android:fontFamily="@font/raleway_medium"
                                    android:text="@string/numeric"
                                    android:textAllCaps="false"
                                    android:textColor="#A0A0A0"
                                    android:textSize="10sp"></Button>
                            </LinearLayout>

                            <TextView
                                android:layout_marginTop="20dp"
                                android:layout_marginBottom="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/raleway_semibold"
                                android:text="@string/confirm_password"
                                android:textColor="#A2A6B0"
                                android:textSize="12sp"></TextView>

                            <com.google.android.material.textfield.TextInputLayout
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:boxStrokeColor="@color/black"
                                android:outlineAmbientShadowColor="@color/black"
                                app:passwordToggleEnabled="true">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/txt_cnfoldPass"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:imeOptions="actionNext"
                                    android:inputType="textPassword"
                                    android:singleLine="true"
                                    android:maxLength="30"
                                    android:cursorVisible="true"
                                    android:textSize="16sp" />

                            </com.google.android.material.textfield.TextInputLayout>




                        </LinearLayout>


                    </LinearLayout>
                </LinearLayout>
            </androidx.core.widget.NestedScrollView>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lytTop"
            android:layout_alignParentBottom="true">


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="8dp">


                <Button
                    android:id="@+id/btn_submit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_grey"
                    android:fontFamily="@font/raleway_medium"
                    android:padding="10dp"
                    android:text="Change Password"
                    android:textAllCaps="false"
                    android:textColor="#FFFF"
                    android:textSize="16sp"></Button>

            </androidx.cardview.widget.CardView>

        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>